<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.gcloud.LocationToFrom"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:paddingTop="20dp">
    <TextView
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="From"
        android:textColor="#000000"
        />
     <EditText
         android:layout_weight="8"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:hint="Click here to pick date"
         android:focusable="false"
         android:id="@+id/editTextFrom"
         android:textColor="#000000"
         android:textColorHint="#646262"
         />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10">
        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="To"
            android:textColor="#000000"
            />
        <EditText
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Click here to pick date"
            android:focusable="false"
            android:id="@+id/editTextTo"
            android:textColor="#000000"
            android:textColorHint="#646262"
            />
    </LinearLayout>
    <Button
        android:layout_margin="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="View Locations"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:background="@drawable/button_style_blue"
        android:textColor="#ffffff"
        android:id="@+id/buttonSignUp"
        android:onClick="view_location"
        />
</LinearLayout>
